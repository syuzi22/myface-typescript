<html lang="en-gb">
<%- include('_head') -%>
<%- include('_header') -%>
<body>
<h1>Posts</h1>
<a href="/posts/create">Create a Post</a>
<ol>
    <% postList.results.forEach(function(post) {%>
        <li>
            <article>
                <div>
                    <img src="<%= post.postedBy.profileImageUrl %>" alt="User Profile image" width="50" height="50"> 
                    <span><%= post.postedBy.name %></span>
                </div>
                <div>
                    <img src="<%= post.imageUrl %>" alt="Post Image" width="200" height="200">
                    <p><%= post.message %> - <%= format(post.createdAt, "yyyy-MM-dd HH:mm:ss") %></p> 
                </div>
                <footer>
                    <%= post.likedBy.length %> likes <%= post.dislikedBy.length %> dislikes
                </footer>
            </article>
        </li>
    <% }); %>
</ol>
<footer>
    <%if (postList.next) { %>
    <a href="<%= postList.next %>">Next</a>
    <% } %>
    <%if (postList.previous) { %>
    <a href="<%= postList.previous %>">Previous</a>
    <% } %>
</footer>
</body>
<%- include('_footer') -%>
</html>
