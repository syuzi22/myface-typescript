<article>
    <div class="post-container">
        <div>
            <img class="post-image" src="<%= post.imageUrl %>" alt="Post Image">
        </div>
        <div class="message-container">
            <% if (!!post.postedBy && !!post.postedBy.username) { %>
                <div class="user-name"><%= post.postedBy.username %></div> 
            <% } %>
            <div class="post-date"><%= format(post.createdAt, "yyyy-MM-dd") %></div>
            <p><%= post.message %></p> 
            <% if (!!post.likedBy && !!post.dislikedBy) { %>
                <footer>
                    <div class="likebuttons-container">
                        <form method="post" action="/posts/<%=post.id%>/like">
                            <button type="submit"><%= post.likedBy.length %> üëç</button>
                        </form>
                        <form method="post" action="/posts/<%=post.id%>/dislike">
                            <button type="submit"><%= post.dislikedBy.length %> üëé</button>
                        </form>
                    </div>
                </footer>
            <% } %>
        </div>
    </div>
</article>